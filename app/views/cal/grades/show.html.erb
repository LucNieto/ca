<div class="m-b-md">
  <h3 class="m-b-none">Evaluaciones</h3>
</div>
<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <section class="panel panel-default">
      <!-- Encabezado -->
      <header class="panel-heading">Información</header>

      <div class="panel-body">
        <div class="row wrapper pull-right">
          <%= link_to '<i class="fa fa-chevron-left"></i>'.html_safe, cal_grades_path, class: 'btn btn-sm btn-icon btn-default' %>
          <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_cal_grade_path(@grade), class: 'btn btn-sm btn-icon btn-success' %>
          <%= link_to '<i class="fa fa-plus"></i>'.html_safe, new_cal_grade_path, class: 'btn btn-sm btn-icon btn-primary' %>
          <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, cal_grade_path(@grade), method: :delete, data: { confirm: 'Estas seguro de eliminar este elemento?' }, class: 'btn btn-sm btn-icon btn-danger' %>
        </div>
        <div class="clearfix"></div>
      </div>

      <table class="table table-stripped m-b-none">
        <tbody>
        <tr>
          <th width="20%">Materia</th>
          <td><%= @grade.student_has_subject.school_cycle_has_subject.subject.nombre_materia %></td>
        </tr>
        <tr>
          <th>Alumno</th>
          <td><%= "#{@grade.student_has_subject.student.matricula} - #{@grade.student_has_subject.student.nombre}" %></td>
        </tr>
        <tr>
          <th>Aplicar parcial</th>
          <td><%= @grade.aplicar_parcial %></td>
        </tr>
        <tr>
          <th>Tipo de evaluación</th>
          <td><%= @grade.grade_type %></td>
        </tr>
        <tr>
          <th>Calificación</th>
          <td><%= @grade.calificacion %></td>
        </tr>
        </tbody>
      </table>

    </section>
  </div>
</div>
