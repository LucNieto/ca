<div class="m-b-md">
  <h3 class="m-b-none">Asignaciones Maestro-grupo</h3>
</div>
<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <section class="panel panel-default">
      <header class="panel-heading">Informaci√≥n</header>

      <div class="panel-body">
        <div class="row wrapper pull-right">
          <%= link_to '<i class="fa fa-chevron-left"></i>'.html_safe, asig_school_cycle_has_subjects_path, class: 'btn btn-sm btn-icon btn-default' %>
          <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_asig_school_cycle_has_subject_path(@school_cycle_has_subject), class: 'btn btn-sm btn-icon btn-success' %>
          <%= link_to '<i class="fa fa-plus"></i>'.html_safe, new_asig_school_cycle_has_subject_path, class: 'btn btn-sm btn-icon btn-primary' %>
          <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, asig_school_cycle_has_subject_path(@school_cycle_has_subject), method: :delete, data: { confirm: 'Estas seguro de eliminar este elemento?' }, class: 'btn btn-sm btn-icon btn-danger' %>
        </div>
        <div class="clearfix"></div>
      </div>

      <table class="table table-stripped m-b-none">
        <tbody>
        <tr>
          <th width="20%">ciclo</th>
          <td><%= "#{@school_cycle_has_subject.school_cycle.nombre_ciclo} - #{@school_cycle_has_subject.school_cycle.career.nombre_carrera}" %></td>
        </tr>
        <tr>
          <th>Maestro</th>
          <td>  <%= @school_cycle_has_subject.teacher.nombre %></td>
        </tr>
        <tr>
          <th>Materia</th>
          <td><%= @school_cycle_has_subject.subject.nombre_materia %></td>
        </tr>
        <tr>
          <th>Lunes</th>
          <td><%=raw @school_cycle_has_subject.lunes ? '<i class="fa fa-check-circle" aria-hidden="true" style="color:green;"></i>' :  '<i class="fa fa-times" style="color:red;"></i>' %></td>
        </tr>
        <tr>
          <th>Martes</th>
          <td><%=raw @school_cycle_has_subject.martes ? '<i class="fa fa-check-circle" aria-hidden="true" style="color:green;"></i>' :  '<i class="fa fa-times" style="color:red;"></i>' %></td>
        </tr>
        <tr>
          <th>Miercoles</th>
          <td><%=raw @school_cycle_has_subject.miercoles ? '<i class="fa fa-check-circle" aria-hidden="true" style="color:green;"></i>' :  '<i class="fa fa-times" style="color:red;"></i>' %></td>
        </tr>
        <tr>
          <th>Jueves</th>
          <td><%=raw @school_cycle_has_subject.jueves ? '<i class="fa fa-check-circle" aria-hidden="true" style="color:green;"></i>' :  '<i class="fa fa-times" style="color:red;"></i>' %></td>
        </tr>
        <tr>
          <th>Viernes</th>
          <td><%=raw @school_cycle_has_subject.viernes ? '<i class="fa fa-check-circle" aria-hidden="true" style="color:green;"></i>' :  '<i class="fa fa-times" style="color:red;"></i>' %></td>
        </tr>
        <tr>
          <th>Sabado</th>
          <td><%=raw @school_cycle_has_subject.sabado ? '<i class="fa fa-check-circle" aria-hidden="true" style="color:green;"></i>' :  '<i class="fa fa-times" style="color:red;"></i>' %></td>
        </tr>
        </tbody>
      </table>

    </section>
  </div>
</div>
