<div class="m-b-md">
  <h3 class="m-b-none">Maestros</h3>
</div>

<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <section class="panel panel-default">
      <!-- Encabezado -->
      <header class="panel-heading">Informaci√≥n</header>

      <div class="panel-body">
        <div class="row wrapper pull-right">
          <%= link_to '<i class="fa fa-chevron-left"></i>'.html_safe, cat_teachers_path, class: 'btn btn-sm btn-icon btn-default' %>
          <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_cat_teacher_path(@teacher), class: 'btn btn-sm btn-icon btn-success' %>
          <%= link_to '<i class="fa fa-plus"></i>'.html_safe, new_cat_teacher_path, class: 'btn btn-sm btn-icon btn-primary' %>
          <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, cat_teacher_path(@teacher), method: :delete, data: { confirm: 'Estas seguro de eliminar este elemento?' }, class: 'btn btn-sm btn-icon btn-danger' %>
        </div>
        <div class="clearfix"></div>
      </div>

      <table class="table table-stripped m-b-none">
        <tbody>
        <tr>
          <th width="20%">Nombre</th>
          <td><%= @teacher.nombre %></td>
        </tr>
        <tr>
          <th>Apellido paterno</th>
          <td><%= @teacher.apellido_paterno %></td>
        </tr>
        <tr>
          <th>Apellido materno</th>
          <td><%= @teacher.apellido_materno %></td>
        </tr>
        <tr>
          <th>Grado</th>
          <td><%= @teacher.grado %></td>
        </tr>
        <tr>
          <th>Email</th>
          <td><%= @teacher.correo_electronico %></td>
        </tr>
        <tr>
          <th>Telefono</th>
          <td><%= @teacher.telefono %></td>
        </tr>
        </tbody>
      </table>

    </section>
  </div>
</div>
