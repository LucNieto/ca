<div class="m-b-md">
  <h3 class="m-b-none">Periodos escolares</h3>
</div>


<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <section class="panel panel-default">
      <!-- Encabezado -->
      <header class="panel-heading">listado</header>
      <section class="panel-body">
        <div class="row wrapper">
          <%= link_to 'Nuevo Periodo', new_cat_period_path, class: 'btn btn-s-md btn-primary'  %>
        </div>
        <% if @periods.present? %>

        <table class="table table-stripped m-b-none">
          <thead>
              <tr>
                <th width="120px" class="text-center">Opciones</th>
                <th>Ciclos</th>
                <th>Periodo</th>
                <th>Tipo</th>
              </tr>
            </thead>
            <tbody>
              <% @periods.each do |period| %>
                <tr>
                  <td class="text-center">
                  <!-- Boton mostrar -->
                  <%= link_to cat_period_path(period) do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                  <!-- Boton de editar -->
                  <%= link_to edit_cat_period_path(period) do %>
                    <i class="fa fa-pencil text-success"></i>
                  <% end %>
                  <!-- Boton eliminar -->
                  <%= link_to cat_period_path(period), method: :delete, data: { confirm: '¿Estas seguro de eliminar este elemento?' } do %>
                    <i class="fa fa-trash-o text-danger"></i>
                  <% end %>
                  </td>
                  <td><%= period.school_cycle.nombre_ciclo %></td>
                  <td><%= period.nombre_periodo %></td>
                  <td><%= period.period_type %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        <% else %>

            <!-- Alert informativo -->
            <div class="alert alert-info fade in alert-dismissable">
              <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
              <strong>Info!</strong> Aun no existen elementos en la base de datos para ser mostrados.
            </div>
          <br>
        <% end %>
      </section>
    </section>
  </div>
</div>