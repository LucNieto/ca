<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Matricula</th>
      <th>Nombre</th>
      <th>Allido paterno</th>
      <th>Apellido materno</th>
      <th>Correo electronico</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Nombre tutor</th>
      <th>Telefono tutor</th>
      <th>Correo tutor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.matricula %></td>
        <td><%= student.nombre %></td>
        <td><%= student.allido_paterno %></td>
        <td><%= student.apellido_materno %></td>
        <td><%= student.correo_electronico %></td>
        <td><%= student.direccion %></td>
        <td><%= student.telefono %></td>
        <td><%= student.nombre_tutor %></td>
        <td><%= student.telefono_tutor %></td>
        <td><%= student.correo_tutor %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Student', new_student_path %>











<div class="m-b-md">
  <h3 class="m-b-none">Alumnos</h3>
</div>

<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <section class="panel panel-default">
      <!-- Encabezado -->
      <header class="panel-heading">listado</header>

      <section class="panel-body">
        <div class="row wrapper">
          <%= link_to 'Nuevo Elemento', new_cat_student_path, class: 'btn btn-s-md btn-primary' %>
        </div>

        <% if @students.present? %>

            <!-- Tabla -->
            <table class="table table-stripped m-b-none">
              <thead>
              <tr>
                <th width="120px" class="text-center">Opciones</th>
                <th>Matrícula</th>
                <th>Nombre</th>
                <th>Apellido Paterno</th>
                <th>Apellido Materno</th>
                <th>Email</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Tutor</th>
                <th>Teléfono del tutor</th>
                <th>Email del tutor</th>
              </tr>
              </thead>
              <tbody>
              <% @students.each do |item| %>
                  <tr>
                    <td class="text-center">
                      <!-- Boton mostrar -->
                      <%= link_to cat_student_path(item) do %>
                          <i class="fa fa-eye"></i>
                      <% end %>
                      <!-- Boton editar -->
                      <%= link_to edit_cat_school_cycle_path(item) do %>
                          <i class="fa fa-pencil text-success"></i>
                      <% end %>
                      <!-- Boton eliminar -->
                      <%= link_to cat_school_cycle_path(item), method: :delete, data: { confirm: '¿Estas seguro de eliminar este elemento?' } do %>
                          <i class="fa fa-trash-o text-danger"></i>
                      <% end %>
                    </td>
                    <td><%= item.nombre_ciclo %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>

        <% else %>

            <!-- Alert informativo -->
            <div class="alert alert-info fade in alert-dismissable">
              <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
              <strong>Info!</strong> Aun no existen elementos en la base de datos para ser mostrados.
            </div>

        <% end %>
      </section>
    </section>
  </div>
</div>
