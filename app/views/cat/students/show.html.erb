<div class="m-b-md">
  <h3 class="m-b-none">Alumnos</h3>
</div>

<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <section class="panel panel-default">
      <!-- Encabezado -->
      <header class="panel-heading">Información</header>

      <div class="panel-body">
        <div class="row wrapper pull-right">
          <%= link_to '<i class="fa fa-chevron-left"></i>'.html_safe, cat_students_path, class: 'btn btn-sm btn-icon btn-default' %>
          <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_cat_student_path(@student), class: 'btn btn-sm btn-icon btn-success' %>
          <%= link_to '<i class="fa fa-plus"></i>'.html_safe, new_cat_student_path, class: 'btn btn-sm btn-icon btn-primary' %>
          <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, cat_student_path(@student), method: :delete, data: { confirm: 'Estas seguro de eliminar este elemento?' }, class: 'btn btn-sm btn-icon btn-danger' %>
        </div>
        <div class="clearfix"></div>
      </div>

      <table class="table table-stripped m-b-none">
        <tbody>

        <tr>
          <th width="20%">Matrícula</th>
          <td><%= @student.matricula %></td>
        </tr>

        <tr>
          <th>Nombre</th>
          <td><%= @student.nombre %></td>
        </tr>

        <tr>
          <th>Apellido paterno</th>
          <td><%= @student.apellido_paterno %></td>
        </tr>

        <tr>
          <th>Apellido materno</th>
          <td><%= @student.apellido_materno %></td>
        </tr>

        <tr>
          <th>Email </th>
          <td><%= @student.correo_electronico %></td>
        </tr>

        <tr>
          <th>Dirección </th>
          <td><%= @student.direccion %></td>
        </tr>

        <tr>
          <th>Teléfono </th>
          <td><%= @student.telefono %></td>
        </tr>

        <tr>
          <th>Tutor </th>
          <td><%= @student.nombre_tutor %></td>
        </tr>

        <tr>
          <th>Teléfono del tutor </th>
          <td><%= @student.telefono_tutor %></td>
        </tr>

        <tr>
          <th>Email del tutor </th>
          <td><%= @student.correo_tutor %></td>
        </tr>

        </tbody>
      </table>

    </section>
  </div>
</div>
