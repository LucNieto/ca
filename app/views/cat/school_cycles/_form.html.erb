<%= form_for( [ 'cat', @school_cycle ], html: { class: 'form-horizontal' }) do |f| %>
  <div class="form-group">
    <label class="col-lg-2 col-md-4 col-sm-4 col-xs-6 control-label">Carrera</label>
    <div class="col-lg-10 col-md-8 col-sm-8 col-xs-6">
      <%= f.select :career_id, Career.all.map { |c| [c.nombre_carrera, c.id] },{ prompt: '- Seleccionar -' }, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-lg-2 col-md-4 col-sm-4 col-xs-6 control-label">Ciclo Escolar</label>
    <div class="col-lg-10 col-md-8 col-sm-8 col-xs-6">
      <%= f.text_field :nombre_ciclo, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="pull-right">
    <%= f.submit nil, class: 'btn btn-sm btn-primary' %>
  </div>
  <div class="clearfix"></div>
<% end %>
