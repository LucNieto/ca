<section id="content" class="m-t-lg wrapper-md animated fadeInUp">    
  <div class="container aside-xl">
    <a class="navbar-brand block" href="index.html">System CA</a>
    <section class="m-b-lg">
      <header class="wrapper text-center">
        <strong>Registro</strong>
      </header>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="list-group">
          <div class="list-group-item">
            <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control no-border' %>
          </div>
          <div class="list-group-item">
            <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control no-border' %>
          </div>
          <div class="list-group-item">
            <%= f.password_field :password_confirmation, placeholder: 'Confirmar password', autocomplete: "off", class: 'form-control no-border' %>
          </div>
          <div class="list-group-item">
            <%= f.text_field :nombre, placeholder: 'Nombre', class: 'form-control no-border' %>
          </div>
          <div class="list-group-item">
            <%= f.text_field :apellido_paterno, placeholder: 'Apellido Paterno', class: 'form-control no-border' %>
          </div>
          <div class="list-group-item">
            <%= f.text_field :apellido_materno, placeholder: 'Apellido Materno', class: 'form-control no-border' %>
          </div>
        </div>
        <%= f.submit 'Registrar', class: 'btn btn-lg btn-primary btn-block' %>
      <% end %>

      <%= render "devise/shared/links" %>
    </section>
  </div>
</section>
