<section id="content" class="m-t-lg wrapper-md animated fadeInUp">    
  <div class="container aside-xl">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <a class="navbar-brand block" href="index.html">System CA</a>
    <section class="m-b-lg">
      <header class="wrapper text-center">
        <strong>Ingresa tus credenciales!!</strong>
      </header>
      <%= form_for(:user, :url => session_path(:user)) do |f| %>
        <div class="list-group">
          <div class="list-group-item">
            <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control no-border' %>
          </div>
          <div class="list-group-item">
          <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control no-border' %>
          </div>
        </div>
        <%= f.submit 'Iniciar SesiÃ³n', class: 'btn btn-lg btn-primary btn-block' %>
        <div class="line line-dashed"></div>
        <p class="text-muted text-center"><small>No tienes cuenta?</small></p>
        <%= link_to "Nueva cuenta", new_user_registration_path, class: 'btn btn-lg btn-default btn-block' %>
      <% end %>
    </section>
  </div>
</section>
